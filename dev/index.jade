doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, user-scalable=no")
    meta(name="mobile-web-app-capable", content="yes")
    //- meta(rel="manifest", href="manifest.json")
    title Batch Queue
    link(rel="stylesheet", href="/css/main.css", charset="utf-8")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.6/socket.io.js")
    script(src="js/client.js", async)
  body
    header.header
      h3 Batch Queue
    div#batchList.batchList
      div.batch
        div.batchName ITM-FURN-0
        div.batchStats
          div.batchDPCIS DPCIs: 5
          div.batchEaches Eaches: 20
        div.batchOwner Owner: Juan Meza
        div.controls
          div.completeButton Complete
          div.cancelButton Cancel
      div.batch
        div.batchName ITM-BB01-0
        div.batchStats
          div.batchDPCIS DPCIs: 5
          div.batchEaches Eaches: 20
        div.batchOwner Owner: Juan Meza
        div.controls
          div.completeButton Complete
          div.cancelButton Cancel
    div#newBatchButton
    div#newBatchForm
      div.formContainer
        div.header Request New Batch
        input(name="batchName", placeholder="Batch Name")
        input(name="DPCIS", placeholder="DPCIs")
        input(name="eaches", placeholder="Eaches")
        input(name="owner", placeholder="Batch Owner")
        div.controls
          div.cancel Cancel
          div.submit Submit
